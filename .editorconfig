# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# TB Rules
[*]
indent_style = space
indent_size = 2
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# Trailing whitespace is important in md files
[*.md]
max_line_length = off
trim_trailing_whitespace = false
